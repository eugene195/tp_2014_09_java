<fest:template xmlns:fest="http://fest.mail.ru" context_name="sessions">

<div>
  <div class="header">
    <div class="header__infobar">
      <h2>Games list</h2>
      <h3>Choose Yours</h3>
    </div>
  </div>

  <div class="new-game">
    <button>Новая игра</button>
    <br/>
    <form class="new-game__form" data-action="/startGame" method="POST">
      <label for="players-cnt">Количество игроков:</label>
      <input name="players-cnt" type="number" value="2"/>
      <label for="launch-time">Время до начала игры:</label>
      <select name="launch-time">
        <option>1 мин</option>
        <option>5 мин</option>
        <option>10 мин</option>
      </select>
      <button type="submit">Создать заявку</button>
    </form>
  </div>


  <div class="sessions">
    <fest:each iterate="sessions" index="i" value="game">
      <div class="sessions__players">
        <fest:each iterate="players" index="i" value="player">
          <strong>player</strong>
        </fest:each>
      </div>
      <button class="sessions__entry">Вступить</button>
      <input type="hidden" value="<fest:value>game.sessionId</fest:value>"/>
      <fest:value>game.playersCnt</fest:value>
      <fest:value>game.time</fest:value>
    </fest:each>
  </div>
</div>

</fest:template>