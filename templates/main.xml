<fest:template xmlns:fest="http://fest.mail.ru">
<div id="wrapper">

<div class="user-icon"></div>
<div class="pass-icon"></div>
  
<form name="login-form" class="login-form" action="/auth" method="POST">
 
  <div class="header">
     <h1>Tentacle Wars</h1>
   </div>

  <div class="content">
  	<div class="menu-item">
		<a href="#game">Start Game</a>
	</div>
	<div class="menu-item">
		<a href="#scoreboard">Scoreboard</a>
	</div>
	<div id="profile" class="menu-item hidden">
		<a href="#profile">Profile</a>
	</div>
	<div id="exit" class="menu-item hidden">
		<a id="logout" href="#">Exit</a>
	</div>

  </div>

  <div class="footer">
	  <!--LOGIN-->
	  <input id="login" type="button" value="Sign in" class="button hidden" onClick="location.href='#login'"/>
	  <!--REGISTER-->
	  <input id="register" type="button" value="Sign up" class="button button-orange hidden" onClick="location.href='#register'"/>
  </div>
  
    </form>
</div>

<div class="gradient"></div>
	
	
</fest:template>
