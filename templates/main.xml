<fest:template xmlns:fest="http://fest.mail.ru">
<div id="wrapper">

<div class="user-icon"></div>
<div class="pass-icon"></div>
  
<form name="login-form" class="form" action="/auth" method="POST">
 
  <div class="form__header">
     <h1>Tentacle Wars</h1>
   </div>

  <div class="form__content">
  	<div class="form__content__menu-item">
		<a href="#game">Start Game</a>
	</div>
	<div class="form__content__menu-item">
		<a href="#scoreboard">Scoreboard</a>
	</div>
	<div id="profile" class="form__content__menu-item">
		<a href="#profile">Profile</a>
	</div>
	<div id="exit" class="form__content__menu-item">
		<a id="logout" href="#">Exit</a>
	</div>

  </div>

  <div class="form__footer">
	  <!--LOGIN-->
	  <a id="auth" href="#login" class="form__footer__button">Sign in</a>
	  <!--REGISTER-->
	  <a id="reg" href="#register" class="form__footer__button form__footer__button--orange">Sign up</a>
  </div>
  
    </form>
</div>

<div class="gradient"></div>
	
	
</fest:template>
