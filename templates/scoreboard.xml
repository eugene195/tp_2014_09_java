<fest:template xmlns:fest="http://fest.mail.ru" context_name="scores">
<div id="wrapper">

	<div class="form">
 
	  <div class="form__header">
	    <h1>Scoreboard</h1>
	    <span>Top users</span>
	  </div>
	  <div class="form__content">
	  	<table>
	  		<tr>
	  			<th>User</th>
	  			<th>Score</th>
	  		</tr>
        <fest:each iterate="scores" index="i" value="score">
            <tr>
            <td><fest:value>score.login</fest:value></td>
            <td align="right"><fest:value>score.score</fest:value></td>
        	</tr>
        </fest:each>
    	</table>

      </div>
      <div class="form__footer">
        	<a href="#" class="form__footer__button form__footer__button--orange">Back</a>
        </div>	
    </div>
</div>
<div class="gradient"></div> 

     
</fest:template>