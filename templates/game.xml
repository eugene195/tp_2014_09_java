<fest:template xmlns:fest="http://fest.mail.ru" context_name="sizes">

    <div class="gamepage__header">
        <div class="gamepage__header__infobar">
            Score: Over 9000
            Lives left: 3
        </div>
        <a href="#" class="gamepage__menu__infobar__menu-btn">Pause</a>
        <a href="#" class="gamepage__menu__infobar__menu-btn">Quit</a>
    </div>

    <div class="gamepage__body">
        <input type="button" id="gmscr" value="Play" name="gamebtn" />
        Game Screen
        <a href="/game">Let's do it</a>

<br/>

        <canvas id="snakeGame" style="border: black solid 2px">
            <fest:attributes>
                <fest:attribute name="width"><fest:value>sizes.width</fest:value></fest:attribute>
                <fest:attribute name="height"><fest:value>sizes.height</fest:value></fest:attribute>
            </fest:attributes>
        </canvas>
    </div>

    <div class="gamepage__footer">
        <div class="gamepage__footer__controlbar-status">
            Footer info
        </div>
    </div>
</fest:template>
