<fest:template xmlns:fest="http://fest.mail.ru">

<div id="wrapper">

<div class="form__content__user-icon"></div>
<div class="form__content__pass-icon"></div>
  
<form name="login-form" class="form" data-action="/auth" method="POST">
 
  <div class="form__header">
    <h1>Login Form</h1>
    <span>Let's get started.</span>
  </div>

  <div class="form__content">
    <!--USERNAME-->
    <div id="login-error" class="alert-error">
      <p id="login-error-message"></p>
    </div>  
    
    <input id="username" name="login" type="text" class="form__content__input" value="Username"/>
    
    <!--PASSWORD-->
    <div id="passw-error" class="alert-error">
      <p id="passw-error-message"></p>
    </div>
    
    <input id="passw" name="passw" type="password" class="form__content__input form__content__input--password" value="Password"/>
  
  </div>

  <div class="form__footer">
    <!--LOGIN-->
    <input id="login" type="submit" name="submit" value="Login" class="form__footer__button" />
    <!--BACK-->
    <a href="#" class="form__footer__button form__footer__button--orange">Back</a>
  </div>
  
    </form>
</div>

<div class="gradient"></div> 

</fest:template>
